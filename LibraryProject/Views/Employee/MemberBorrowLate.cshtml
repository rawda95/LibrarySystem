@section Scripts{
    <script>
        $(document).ready(function () {
            $("#txtSearch").autocomplete = "on";

            $("#txtSearch").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/Employee/NamesBorrowBooks",
                        type: "POST",
                        dataType: "json",
                        data: { name: request.term },
                        success: function (data) {
                            response(data);

                        }


                    })
                },

            });
        })
    </script>
}
